<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BatchBash.View.programs">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Label Text="{Binding Nadpis}" FontSize="Large" HorizontalOptions="Center"/>
            <Button Text="(install) Nainstalovat balíček" Command="{Binding ChangeViewinstall}" />
            <Button Text="(remove) Odstranit balíček" Command="{Binding ChangeViewremove}" />
            <Button Text="(purge) Úplně ostranit balíček" Command="{Binding ChangeViewpurge}" />
            <Button Text="(autoremove) Odstranit nepotřebné balíčky" Command="{Binding ChangeViewautoremove}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>